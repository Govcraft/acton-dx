{{{{raw}}}}{% extends "base.html" %}

{% block title %}{% if {{{{/raw}}}}{{model_snake}}{{{{raw}}}} %}Edit{% else %}New{% endif %} {{{{/raw}}}}{{model_name}}{{{{raw}}}}{% endblock %}

{% block content %}{{{{/raw}}}}
<!-- HTMX Content Start -->
<div id="main-content">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">{{{{raw}}}}{% if {{{{/raw}}}}{{model_snake}}{{{{raw}}}} %}Edit{% else %}New{% endif %} {{{{/raw}}}}{{model_name}}{{{{raw}}}}{% endblock %}</h1>

        <!-- Flash Messages -->
        <div id="flash-messages" class="mb-4"></div>

        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <form {% if {{{{/raw}}}}{{model_snake}}{{{{raw}}}} %}
                      hx-put="{{{{/raw}}}}{{route_path}}{{{{raw}}}}/\{{ {{{{/raw}}}}{{model_snake}}{{{{raw}}}}.id }}"
                  {% else %}
                      hx-post="{{{{/raw}}}}{{route_path}}{{{{raw}}}}"
                  {% endif %}{{{{/raw}}}}
                  hx-target="#main-content"
                  hx-push-url="true">

                {{#each fields}}
                <div class="mb-4">
                    <label for="{{name}}" class="block text-gray-700 text-sm font-bold mb-2">
                        {{name}}{{#unless optional}}*{{/unless}}
                    </label>
                    {{#if (eq rust_type "String")}}
                    <input type="text"
                           name="{{name}}"
                           id="{{name}}"
                           value="{{{{raw}}}}{% if {{{{/raw}}}}{{../model_snake}}{{{{raw}}}} %}\{{ {{{{/raw}}}}{{../model_snake}}{{{{raw}}}}.{{{{/raw}}}}{{name}}{{{{raw}}}} }}{% endif %}{{{{/raw}}}}"
                           class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline {{{{raw}}}}{% if errors %}{% if errors.{{{{/raw}}}}{{name}}{{{{raw}}}} %}border-red-500{% endif %}{% endif %}{{{{/raw}}}}"
                           {{#unless optional}}required{{/unless}}>
                    {{else if (eq rust_type "bool")}}
                    <input type="checkbox"
                           name="{{name}}"
                           id="{{name}}"
                           {{{{raw}}}}{% if {{{{/raw}}}}{{../model_snake}}{{{{raw}}}} %}{% if {{{{/raw}}}}{{../model_snake}}{{{{raw}}}}.{{{{/raw}}}}{{name}}{{{{raw}}}} %}checked{% endif %}{% endif %}{{{{/raw}}}}
                           class="mr-2 leading-tight">
                    {{else}}
                    <input type="text"
                           name="{{name}}"
                           id="{{name}}"
                           value="{{{{raw}}}}{% if {{{{/raw}}}}{{../model_snake}}{{{{raw}}}} %}\{{ {{{{/raw}}}}{{../model_snake}}{{{{raw}}}}.{{{{/raw}}}}{{name}}{{{{raw}}}} }}{% endif %}{{{{/raw}}}}"
                           class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline {{{{raw}}}}{% if errors %}{% if errors.{{{{/raw}}}}{{name}}{{{{raw}}}} %}border-red-500{% endif %}{% endif %}{{{{/raw}}}}"
                           {{#unless optional}}required{{/unless}}>
                    {{/if}}
                    {{{{raw}}}}{% if errors %}
                        {% if let Some(field_errors) = errors.{{{{/raw}}}}{{name}}{{{{raw}}}} %}
                            <p class="text-red-500 text-xs italic mt-1">\{{ field_errors[0] }}</p>
                        {% endif %}
                    {% endif %}{{{{/raw}}}}
                </div>
                {{/each}}

                <div class="flex items-center justify-between">
                    <button type="submit"
                            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        {{{{raw}}}}{% if {{{{/raw}}}}{{model_snake}}{{{{raw}}}} %}Update{% else %}Create{% endif %} {{{{/raw}}}}{{model_name}}
                    </button>
                    <a href="{{route_path}}"
                       class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800"
                       hx-get="{{route_path}}"
                       hx-target="#main-content"
                       hx-push-url="true">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- HTMX Content End -->
{{{{raw}}}}{% endblock %}{{{{/raw}}}}
